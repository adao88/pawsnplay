<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/profileBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Page"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTitle" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDisplayProfile" />

    <TextView
        android:id="@+id/emailDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTitle" />

    <TextView
        android:id="@+id/zipCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:text="Zipcode:"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBanner" />

    <TextView
        android:id="@+id/zipCodeDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="8dp"
        android:text="_____"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zipCodeTitle" />

    <TextView
        android:id="@+id/dogProfileBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dog Profile"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBanner" />

    <TextView
        android:id="@+id/dogNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Dog Name:"
        android:textStyle="bold"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailDisplayProfile" />

    <TextView
        android:id="@+id/dogNameDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogNameTitle" />

    <TextView
        android:id="@+id/dogAgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogNameDisplayProfile" />

    <TextView
        android:id="@+id/dogAgeDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_____"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogAgeTitle" />

    <TextView
        android:id="@+id/dogSizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="28dp"
        android:text="Size:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/dogNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/dogProfileBanner" />

    <TextView
        android:id="@+id/dogSizeDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="8dp"
        android:text="_____"
        app:layout_constraintStart_toEndOf="@+id/dogNameDisplayProfile"
        app:layout_constraintTop_toBottomOf="@+id/dogSizeTitle" />

    <TextView
        android:id="@+id/dogActivityLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:text="Activity Level: "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/dogAgeTitle"
        app:layout_constraintTop_toBottomOf="@+id/dogSizeDisplayProfile" />

    <TextView
        android:id="@+id/dogActivityLevelDisplayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="12dp"
        android:text="_____"
        app:layout_constraintStart_toEndOf="@+id/dogAgeDisplayProfile"
        app:layout_constraintTop_toBottomOf="@+id/dogActivityLevelTitle" />

    <Button
        android:id="@+id/editUserProfileButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="12dp"
        android:text="Edit"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/emailTitle"
        app:layout_constraintTop_toBottomOf="@+id/zipCodeDisplayProfile" />

    <Button
        android:id="@+id/editDogProfileButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Edit"
        android:textSize="10sp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogActivityLevelDisplayProfile" />

    <Button
        android:id="@+id/goToPostsButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Posts"
        android:textSize="7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/messagesButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:textSize="7sp"
        android:text="Inbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton" />


</androidx.constraintlayout.widget.ConstraintLayout>